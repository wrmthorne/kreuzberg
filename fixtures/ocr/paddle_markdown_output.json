{
	"id": "ocr_paddle_markdown",
	"category": "ocr",
	"description": "PaddleOCR with markdown output format.",
	"document": {
		"path": "images/test_hello_world.png",
		"media_type": "image/png",
		"requires_external_tool": ["paddle-ocr", "onnxruntime"]
	},
	"extraction": {
		"config": {
			"ocr": {
				"backend": "paddle-ocr",
				"language": "en",
				"paddle_ocr_config": {
					"output_format": "markdown"
				}
			},
			"force_ocr": true
		}
	},
	"assertions": {
		"expected_mime": "image/png",
		"min_content_length": 5,
		"content_contains_any": ["hello", "Hello", "world", "World"]
	},
	"skip": {
		"requires_feature": ["paddle-ocr"],
		"notes": "Tests markdown output format parity with Tesseract"
	}
}
