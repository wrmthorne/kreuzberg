{
	"$schema": "https://biomejs.dev/schemas/2.3.10/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"includes": ["**/*", "!crates/kreuzberg-tesseract/third_party", "!test_documents"]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"lineWidth": 120
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double",
			"trailingCommas": "all"
		}
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": {
				"noExplicitAny": "warn"
			}
		}
	},
	"overrides": [
		{
			"includes": [
				"**/tests/**",
				"**/*.spec.ts",
				"**/*.test.ts",
				"**/*.test.tsx",
				"e2e/wasm-deno/**",
				"e2e/wasm-workers/**"
			],
			"linter": {
				"rules": {
					"suspicious": {
						"noExplicitAny": "off",
						"useIterableCallbackReturn": "off"
					},
					"style": {
						"noNonNullAssertion": "off"
					},
					"correctness": {
						"noUnusedFunctionParameters": "off",
						"noUnusedImports": "off",
						"noUnusedVariables": "off",
						"useHookAtTopLevel": "off"
					},
					"a11y": {
						"useButtonType": "off"
					}
				}
			}
		},
		{
			"includes": ["examples/**/*.ts"],
			"linter": {
				"rules": {
					"suspicious": {
						"noExplicitAny": "off"
					},
					"correctness": {
						"noUnusedPrivateClassMembers": "off",
						"noUnusedFunctionParameters": "off"
					}
				}
			}
		},
		{
			"includes": ["crates/kreuzberg-node/index.js"],
			"linter": {
				"rules": {
					"suspicious": {
						"noGlobalAssign": "off"
					}
				}
			}
		},
		{
			"includes": ["**/scripts/**/*.ts", "**/src/ocr/**/*.ts", "**/src/ocr/**/*.d.ts"],
			"linter": {
				"rules": {
					"suspicious": {
						"noExplicitAny": "off"
					}
				}
			}
		},
		{
			"includes": [
				"tools/benchmark-visualizer/src/components/ui/**",
				"tools/benchmark-visualizer/src/components/layout/**"
			],
			"linter": {
				"rules": {
					"a11y": {
						"noSvgWithoutTitle": "off",
						"useSemanticElements": "off"
					}
				}
			}
		}
	]
}
